type Blog {
  id: ID!
  title: String!
  content: String!
}

type Query {
  blogs: [Blog!]!
  blog(id: ID!): Blog!
}

input NewBlog {
  title: String!
  content: String!
}

input EditBlog {
  blogId: ID!
  title: String!
  content: String!
}

input DeleteBlog {
  blogId: ID!
}

type Mutation {
  newBlog(input: NewBlog!): Blog!
  editBlog(input: EditBlog!): Blog!
  deleteBlog(input: DeleteBlog!): Boolean!
}
